<%- include('./components/header')%>

    <body>
        <div class="content container col-6 login  justify-content-center align-items-center"
            style="margin-bottom: 15px">
            <div class="card d-flex  justify-content-center align-items-center" style="border-radius: 1rem;">

                <form id="update_form" method="post" action="/functions/register">
                    <div class="d-flex justify-content-center">
                        <a href="/">
                            <img src="/Matanflix.png" alt="logo" class="img-fluid"
                                style="border-radius: 1rem 0 0 1rem; margin: 10px; width: 100px; height: 100px;" />
                        </a>
                    </div>
                    <% if (error !="" ) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                            <h5 class="fw-normal fw-bold text-center mt-2">Create your account</h5>

                            <div class="form-outline mx-4 mt-3">
                                <input type="text" name="UserName" class="form-control form-control-lg"
                                    placeholder="Enter UserName" />
                            </div>

                            <div class="form-outline mx-4 mt-2">
                                <input type="password" name="Password" class="form-control form-control-lg"
                                    placeholder="Enter Password" />
                            </div>

                            <div class="form-outline mx-4 mt-2">
                                <input type="password" name="PasswordCheck" class="form-control form-control-lg"
                                    placeholder="Confirm Password" />
                            </div>

                            <div class="pt-4 text-center">
                                <button class="btn btnflix btn-lg btn-block" form="update_form"
                                    type="submit">Register</button>
                            </div>
                            <p class="text-center mt-3">Have an account?
                                <a class="btn btnflix btn-lg btn-block" type="button" href="/login">Login</a>
                            </p>
                </form>
            </div>
        </div>

        <%- include('./components/footer')%>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                crossorigin="anonymous"></script>
    </body>

    </html>